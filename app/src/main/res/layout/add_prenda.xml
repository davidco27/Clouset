<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/tipoT"
        android:textSize="15dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tipo de prenda :"/>
<EditText
    android:layout_toRightOf="@+id/tipoT"
    android:layout_marginTop="35dp"
    android:id="@+id/tipo"
    android:layout_width="60dp"
    android:layout_height="wrap_content"
    />
    <TextView
        android:textSize="15dp"
        android:id="@+id/marcaT"
        android:layout_below="@id/tipoT"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Marca :"/>
    <EditText
        android:id="@+id/marca"
        android:layout_marginTop="10dp"
        android:layout_below="@id/tipoT"
        android:layout_toRightOf="@+id/marcaT"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        />

    <Button
        android:id="@+id/btn2"
        android:layout_marginLeft="50dp"
        android:layout_below="@id/marca"
        android:layout_marginTop="100dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guardar prenda"/>
    <Button
        android:id="@+id/btnFoto"
        android:layout_marginLeft="50dp"
        android:layout_below="@id/marca"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hacer foto"/>
    <ImageView
        android:id="@+id/foto"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="300dp"
        android:layout_marginLeft="50dp"/>
</RelativeLayout>