<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/add_prenda"
    android:layout_height="match_parent">
    //texto titulo prenda
    <TextView
        android:id="@+id/tituloAdd"
        android:textSize="25dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:text="Valores de la nueva prenda : "/>
    //texto campo prenda
    <TextView
        android:id="@+id/campoText"
        android:textSize="15dp"
        android:layout_below="@+id/tituloAdd"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Campo :"/>
    //spinner campo prenda
    <Spinner
        android:id="@+id/campoSpinner"
        android:layout_below="@+id/tituloAdd"
        android:layout_toRightOf="@+id/campoText"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_width="150dp"
        android:layout_height="wrap_content" />
    //texto tipo prenda
    <TextView
        android:id="@+id/tipoText"
        android:textSize="15dp"
        android:layout_below="@+id/campoText"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tipo de prenda :"/>
    //spinner tipo prenda
    <Spinner
        android:id="@+id/tipoSpinner"
        android:layout_below="@+id/campoSpinner"
        android:layout_toRightOf="@+id/tipoText"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_width="150dp"
        android:layout_height="wrap_content" />
    //texto marca
    <TextView
        android:id="@+id/marcaText"
        android:textSize="15dp"
        android:layout_below="@id/tipoText"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Marca :"/>
    //cuadro texto marca
    <EditText
        android:id="@+id/marca"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="15dp"
        android:layout_below="@id/tipoText"
        android:layout_toRightOf="@+id/marcaText"
        android:layout_width="250dp"
        android:layout_height="wrap_content" />
    //texto color
    <TextView
        android:id="@+id/colorText"
        android:textSize="15dp"
        android:layout_below="@id/marcaText"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Color :" />
    //bot√≥n color
    <Button
        android:id="@+id/color"
        android:text="SELECCIONAR COLOR"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/marcaText"
        android:layout_toRightOf="@+id/colorText"
        android:layout_width="120dp"
        android:layout_height="wrap_content" />
    //Foto imagen
    <ImageView
        android:id="@+id/fotoAdd"
        android:layout_below="@+id/colorText"
        android:layout_width="150dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="50dp"
        android:layout_height="150dp"/>
    //Boton imagen
    <Button
        android:id="@+id/btn2"
        android:layout_marginLeft="100dp"
        android:layout_below="@id/fotoAdd"
        android:layout_marginTop="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guardar prenda"/>

</RelativeLayout>