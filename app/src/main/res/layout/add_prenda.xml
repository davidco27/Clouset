<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/add_prenda"
    android:background="#FFDFCB"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tituloAdd"
        android:textSize="25dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#674F07"
        android:text="Valores de la nueva prenda : "/>

    <TextView
        android:id="@+id/campoText"
        android:textSize="15dp"
        android:layout_below="@+id/tituloAdd"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#674F07"
        android:text="Campo :"/>

    <Spinner
        android:id="@+id/campoSpinner"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tituloAdd"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/campoText"
        android:textColor="#674F07"/>

    <TextView
        android:id="@+id/tipoText"
        android:textSize="15dp"
        android:layout_below="@+id/campoText"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tipo de prenda :"
        android:textColor="#674F07"/>

    <Spinner
        android:id="@+id/tipoSpinner"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="150dp"
        android:layout_toRightOf="@+id/tipoText"
        android:textColor="#674F07"/>

    <TextView
        android:id="@+id/marcaText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tipoText"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="28dp"
        android:text="Marca :"
        android:textSize="15dp"
        android:textColor="#674F07"/>

    <EditText
        android:id="@+id/marca"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tipoText"
        android:layout_marginLeft="34dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/marcaText"
        android:textColor="#674F07"/>

    <TextView
        android:id="@+id/colorText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/marcaText"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="38dp"
        android:text="Color :"
        android:textSize="15dp"
        android:textColor="#674F07"/>

    <Button
        android:id="@+id/color"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/marcaText"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@+id/colorText"
        android:background="#674F07"
        android:textColor="#FFDFCB"
        android:text="SELECCIONAR COLOR"
        />

    <ImageView
        android:id="@+id/fotoAdd"
        android:layout_width="217dp"
        android:layout_height="214dp"
        android:layout_below="@+id/colorText"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="71dp" />

    <Button
        android:id="@+id/btn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fotoAdd"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="35dp"
        android:background="#674F07"
        android:text="Guardar prenda"
        android:textColor="#FFDFCB"/>

</RelativeLayout>